    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome client",
            "type": "chrome",
            "request": "launch",
            "address": "127.0.0.1",
            "port": 80,
            "webRoot": "${workspaceFolder}",
            "timeout": 30000
        },
        {
            "name": "Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}\\teleType.js"
        }
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": [
                "Server",
                "Chrome client"
            ]
        }
    ]
}